{
  "openapi": "3.0.0",
  "info": {
    "title": "SUPA-MENU APIs",
    "version": "1.0.0",
    "description": "API documentation for Your App"
  },
  "tags": [
    {
      "name": "authentication-controller",
      "description": "Operations related to authentication"
    },
    {
      "name": "user-controller",
      "description": "Operations related to users"
    },
    {
      "name": "restaurant-controller",
      "description": "Operations related to restaurants"
    },
    {
      "name": "menu-controller",
      "description": "Operations related to menus"
    }    
  ],
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/auth/signup": {
      "post": {
        "summary": "Save user",
        "tags": ["authentication-controller"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User saved successfully",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/auth/signin": {
      "post": {
        "summary": "Signin",
        "tags": ["authentication-controller"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "required": true
                  },
                  "password": {
                    "email" : {
                      "type" : {
                        "type" : "string",
                        "required" : true
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User signin successful",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/restaurant": {
      "post": {
        "summary": "Save restaurant",
        "tags": ["restaurant-controller"],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "restaurantData": {
                    "$ref": "#/components/schemas/Restaurant"
                  },
                  "images": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Restaurant saved successfully",
            "content": {
              "application/json": {}
            }
          }
        }
      },
      "get": {
        "summary": "Get restaurants",
        "tags": ["restaurant-controller"],
        "responses": {
          "200": {
            "description": "List of restaurants",
            "content": {
              "application/json": {}
            }
          }
        }
      },
      "put": {
        "summary": "Update restaurants",
        "tags": ["restaurant-controller"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Restaurant"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Restaurant updated successfully",
            "content": {
              "application/json": {}
            }
          }
        }
      },
      "delete": {
        "summary": "Delete restaurants",
        "tags": ["restaurant-controller"],
        "responses": {
          "200": {
            "description": "Restaurant deleted successfully",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/restaurant/{restaurantId}": {
      "post": {
        "summary": "Create a new menu item",
        "tags": [
          "menu-controller"
        ],
        "parameters": [
          {
            "name": "restaurantId",
            "in": "path",
            "description": "ID of the restaurant to save the item",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "menuData": {
                    "$ref": "#/components/schemas/MenuItem"
                  },
                  "image": {
                    "type": "string",
                    "format" : "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Menu item created successfully",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "phoneNumber": {
            "type": "string",
            "required": true
          },
          "fullName": {
            "type": "string",
            "required": true
          },
          "email": {
            "type": "string",
            "required": true
          },
          "password": {
            "type": "string",
            "required": true
          }
        }
      },
      "Restaurant": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "unique": true
          },
          "fullName": {
            "type": "string"
          },
          "phoneNumber": {
            "type": "string"
          },
          "ownerName": {
            "type": "string"
          },
          "ownerPhoneNumber": {
            "type": "string"
          },
          "ownerEmail": {
            "type": "string"
          },
          "category": {
            "type": "string",
            "enum": ["restaurant" , "pub", "hotel", "coffeeshop", "other"]
          },
          "description": {
            "type": "string"
          },
          "openingHours": {
            "type": "string"
          },
          "closingHours": {
            "type": "string"
          } 
        },
        "required" : ["name", "fullName", "phoneNumber", "ownerName", "ownerEmail", "category", "description", "openingHours", "closingHours"]
      },
      "MenuItem": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "unique": true
          },
          "price": {
            "type": "number"
          },
          "description": {
            "type": "string"
          },
          "category": {
            "type": "string",
            "enum": ["Drink", "Starter", "Appetizer", "Dessert", "Main"]
          }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}

{
  "openapi": "3.0.0",
  "info": {
    "title": "SUPA-MENU APIs",
    "version": "1.0.0",
    "description": "API documentation for Your App"
  },
  "tags": [
    {
      "name": "Authentication-controller",
      "description": "Operations related to Authentication"
    }
  ],
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/signup": {
      "post": {
        "summary": "Save user",
        "tags": ["Authentication-controller"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User saved successfully",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/signin": {
      "post": {
        "summary": "Signin",
        "tags": ["Authentication-controller"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "required": true
                  },
                  "password": {
                    "email" : {
                      "type" : {
                        "type" : "string",
                        "required" : true
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User signin successful",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/Authentication-controller" : {
      "get" : {
        "summary": "Get Authentication-controller",
        "tags": ["Authentication-controller"],
        "responses": { 
          "200": {
            "description": "User retrieved successfully",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/restaurants": {
      "post": {
        "summary": "Save restaurants",
        "tags": ["Restaurants"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Restaurant"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Restaurant saved successfully",
            "content": {
              "application/json": {}
            }
          }
        }
      },
      "get": {
        "summary": "Get restaurants",
        "tags": ["Restaurants"],
        "responses": {
          "200": {
            "description": "List of restaurants",
            "content": {
              "application/json": {}
            }
          }
        }
      },
      "put": {
        "summary": "Update restaurants",
        "tags": ["Restaurants"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Restaurant"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Restaurant updated successfully",
            "content": {
              "application/json": {}
            }
          }
        }
      },
      "delete": {
        "summary": "Delete restaurants",
        "tags": ["Restaurants"],
        "responses": {
          "200": {
            "description": "Restaurant deleted successfully",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "phoneNumber": {
            "type": "string",
            "required": true
          },
          "fullName": {
            "type": "string",
            "required": true
          },
          "email": {
            "type": "string",
            "required": true
          },
          "password": {
            "type": "string",
            "required": true
          }
        }
      },
      "Restaurant": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "required": true
          },
          "fullName": {
            "type": "string",
            "required": true
          },
          "email": {
            "type": "string",
            "required": true
          }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
